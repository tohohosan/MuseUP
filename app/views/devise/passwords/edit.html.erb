<body class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-lg mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold text-center mb-4 border-b-2">パスワードの再設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium text-gray-700" %><br />
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500">※ 最低 <%= @minimum_password_length %> 文字以上</p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワードの再設定", class: "btn btn-primary w-full" %>
      </div>

      <div class="text-center mt-4 text-sm text-gray-700 space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</body>
