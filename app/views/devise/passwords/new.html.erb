<body class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold text-center mb-4">パスワードをお忘れですか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード再設定用のリンクを送信", class: "btn btn-primary w-full" %>
      </div>

      <div class="text-center mt-4 text-sm text-gray-700 space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</body>
