<body class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold text-center mb-4 border-b-2">新規ユーザー登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>

      <div class="field">
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mt-8" %>
        <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autocomplete: "email", class: "input input-bordered w-full" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
      </div>

      <div class="flex items-center space-x-2">
        <%= check_box_tag "agree_terms", "1", false, id: "agree_terms", class: "checkbox" %>
        <p class="text-sm text-gray-700">
          <%= link_to "利用規約", terms_path, class: "text-sm text-blue-500 hover:text-blue-700" %>と<%= link_to "プライバシーポリシー", privacy_path, class: "text-sm text-blue-500 hover:text-blue-700" %>に同意します。
        </p>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-primary w-full", id: "submit_button" %>
      </div>

      <div class="text-center mt-4 text-sm text-gray-700 space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
