<% if params[:reviews_page] %>
    document.querySelector('#reviews-container').innerHTML = "<%= j render partial: 'reviews/review', locals: { reviews: @reviews } %>";
    document.querySelector('#reviews-pagination').innerHTML = "<%= j paginate @reviews, param_name: :reviews_page, remote: true %>";
<% end %>

<% if params[:lists_page] %>
    document.querySelector('#lists-container').innerHTML = "<%= j render partial: 'lists/list', collection: @lists, as: :list %>";
    document.querySelector('#lists-pagination').innerHTML = "<%= j paginate @lists, param_name: :lists_page, remote: true %>";
<% end %>
