<div class="mx-auto space-y-6">
    <%= form_with url: museums_path, method: :get, local: true do |f| %>
        <h2 class="text-2xl font-semibold text-center mb-8 border-b-2">ミュージアム検索</h2>

        <div class="form-control">
            <%= f.label :name, "ミュージアム名", class: "label" %>
            <%= f.text_field :name, value: params[:name], class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
            <%= f.label :address, "住所（都道府県）", class: "label" %>
            <%= f.text_field :address, value: params[:address], class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
            <%= f.label :category, "カテゴリ", class: "label" %>
            <%= f.collection_select :category_id, Category.all, :id, :name,
                { include_blank: "選択してください" },
                { class: "select select-bordered w-full" } %>
        </div>

        <div class="mt-6">
            <%= f.submit "検索", class: "btn btn-primary w-full" %>
        </div>

        <div class="mt-5">
            <%= f.submit "現在地から探す", class: "btn btn-primary w-full" %>
        </div>
    <% end %>
</div>