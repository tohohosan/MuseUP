<div class="p-6 max-w-sm mx-auto bg-white rounded-xl shadow-md space-y-4">
    <%= form_with model: @museum, local: true do |f| %>
    <h2 class="text-2xl font-semibold text-center mb-4 border-b-2">ミュージアム投稿</h2>

            <div class="mt-8">
                <%= f.label :name, "ミュージアム名" %>
                <%= f.text_field :name, class: "input input-bordered w-full" %>
            </div>

            <div class="mt-4">
                <%= f.label :address, "住所" %>
                <%= f.text_field :address, class: "input input-bordered w-full" %>
            </div>

            <div class="mt-4">
                <%= f.label :description, "説明" %>
                <%= f.text_area :description, class: "input input-bordered w-full" %>
            </div>

            <div class="mt-4">
                <%= f.label :categories, "カテゴリ" %>
                <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
            </div>

            <div class="mt-4">
                <%= f.label :images, "画像アップロード" %>
                <%= f.file_field :image, class: "file-input file-input-bordered w-full max-w-xs mt-8" %>
            </div>

            <div class="mt-8">
                <%= f.submit "投稿", class: "btn btn-primary w-full" %>
            </div>
        </div>
    <% end %>
</div>
