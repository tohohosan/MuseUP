<header class="h-20 p-0 m-0 z-50 bg-base-100 shadow-sm w-full">
  <% if user_signed_in? %>
    <div class="container mx-auto flex justify-between items-center p-4">

      <!-- ハンバーガーメニュー -->
      <div class="dropdown dropdown-bottom">
        <button class="btn btn-square btn-ghost dropdown-bottom">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        </button>
        <ul class="dropdown-content menu flex-col p-0 shadow bg-base-100 rounded-box">
          <li class="px-4 py-2"><%= link_to "マイページ", user_path(current_user) %></li>
          <li class="px-4 py-2"><%= link_to "リスト", lists_path %></li>
          <li class="px-4 py-2"><%= link_to "メモ", user_notes_path(current_user) %></li>
        </ul>
      </div>

      <!-- MuseUP タイトル -->
      <div class="text-lg font-bold text-left flex-1 ml-2">
        <%= link_to "MuseUP", root_path, class: "text-2xl text-primary" %>
      </div>

      <!-- メニュー -->
      <div class="flex space-x-4">
        <%= link_to raw('<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" /></svg>検索'), museums_path, class: "btn btn-secondary flex items-center space-x-1" %>
        <%= link_to raw('<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" /></svg>投稿'), new_museum_path, class: "btn flex items-center space-x-1" %>
        <%= link_to raw('<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" /></svg>ログアウト'), destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "btn btn-neutral flex items-center space-x-1" %>
      </div>
    </div>
  <% else %>
    <div class="container mx-auto flex justify-between items-center p-4">

      <!-- MuseUP タイトル -->
      <div class="text-lg font-bold text-left">
        <%= link_to "MuseUP", root_path, class: "text-2xl text-primary" %>
      </div>

      <!-- メニュー -->
      <div class="flex space-x-4">
        <%= link_to raw('<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" /></svg>検索'), museums_path, class: "btn btn-secondary flex items-center space-x-1" %>
        <%= link_to raw('<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" /></svg>ログイン'), new_user_session_path, class: "btn btn-neutral flex items-center space-x-1" %>
      </div>
    </div>
  <% end %>
</header>

<style>
  .dropdown-content.menu {
    display: flex;
    flex-direction: row; /* 横並びにする */
    padding: 0;
  }

  .dropdown-content.menu li {
    padding: 0.3rem 3rem;
    margin: 0;
    text-align: left;
  }
</style>