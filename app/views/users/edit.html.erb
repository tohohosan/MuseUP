<div class="p-6 max-w-sm mx-auto bg-white rounded-xl shadow-md space-y-4">
  <%= form_for(current_user, url: user_path, method: :patch, html: { multipart: true }) do |f| %>
    <div class="text-center">
      <% if current_user.image&.attached? %>
        <%= image_tag current_user.image, class: "w-24 h-24 rounded-full mx-auto" %>
      <% else %>
        <%= image_tag current_user.image, class: "w-24 h-24 rounded-full mx-auto" if current_user.image.present? %>
      <% end %>
      <%= f.file_field :image, class: "mt-2" %>
    </div>

    <div class="mt-4">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, class: "input input-bordered w-full" %>
    </div>

    <div class="mt-4">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "input input-bordered w-full" %>
    </div>

    <div class="mt-4">
      <%= f.label :password, "パスワード (変更しない場合は空白のまま)" %>
      <%= f.password_field :password, class: "input input-bordered w-full" %>
    </div>

    <div class="mt-4">
      <%= f.submit "更新", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
