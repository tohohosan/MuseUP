<div class="p-6 max-w-sm mx-auto bg-white rounded-xl shadow-md space-y-4">
  <div class="text-center">
    <% if current_user.profile_image.attached? %>
      <%= image_tag current_user.image, class: "w-24 h-24 rounded-full mx-auto" %>
    <% else %>
      <%= image_tag current_user.image, class: "w-24 h-24 rounded-full mx-auto" if current_user.image.present? %>
    <% end %>
  </div>

  <h2 class="text-center text-xl font-semibold"><%= current_user.name %></h2>
  <p class="text-center text-gray-600"><%= current_user.email %></p>

  <div class="text-center">
    <p class="text-gray-600">パスワード: ••••••••</p>
  </div>

  <div class="text-center mt-4">
    <%= link_to '編集', edit_user_path, class: "btn btn-primary" %>
  </div>
</div>
