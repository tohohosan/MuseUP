<div class="container mx-auto mt-6">
  <h1 class="text-2xl font-bold mb-6 text-center">運営からのお知らせ</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <% @notices.each do |notice| %>
      <div class="bg-white rounded-lg shadow-lg p-4">
        <div class="mb-4 flex justify-between items-center">
          <h2 class="text-lg font-semibold"><%= notice.title %></h2>
          <div class="text-gray-600 text-sm">
                <%= l(notice.created_at, format: '%Y-%m-%d') %>
          </div>
        </div>
        <p class="text-gray-600 truncate"><%= notice.content %></p>
        <%= link_to "詳細を見る", notice_path(notice), class: "text-blue-500 hover:text-blue-700 mt-4 block" %>
      </div>
    <% end %>
  </div>
</div>
