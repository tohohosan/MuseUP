<div class="container mx-auto mt-8">
  <h1 class="text-2xl font-bold mb-4 text-center">運営からのお知らせ</h1>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% @notices.each do |notice| %>
      <div class="bg-white rounded-lg shadow-lg p-4">
        <h2 class="text-lg font-semibold mb-2"><%= notice.title %></h2>
        <p class="text-gray-600 truncate"><%= notice.content %></p>
        <%= link_to "詳細を見る", notice_path(notice), class: "text-blue-500 hover:underline mt-4 block" %>
      </div>
    <% end %>
  </div>
</div>
