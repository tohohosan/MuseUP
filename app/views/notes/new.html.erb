<div class="p-6 max-w-lg mx-auto bg-white rounded-xl shadow-md space-y-4">
    <%= form_with(model: @note, url: museum_notes_path(@museum), method: :post, local: true) do |f| %>
        <h2 class="text-2xl font-semibold text-center mb-4 border-b-2">メモ作成</h2>

        <div class="mb-4">
            <%= f.label :content, "内容<span class='text-red-500'>*</span>".html_safe, class: "block font-medium mb-2" %>
            <%= f.text_area :content, rows: 5, class: "input input-bordered w-full" %>
            <small class="text-gray-500">1000 文字以内で入力してください</small>
        </div>

        <div class="flex items-center">
            <%= f.submit "保存", class: "btn btn-primary w-full" %>
        </div>

        <div class="mt-4 text-center">
            <%= link_to "戻る", museum_path(@museum), class: "text-blue-500 hover:text-blue-700" %><br />
        </div>
    <% end %>
</div>
