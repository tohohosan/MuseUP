<div class="p-6 max-w-lg mx-auto bg-white rounded-xl shadow-md space-y-2">
    <h2 class="text-2xl font-semibold text-center mb-4 border-b-2"><%= current_user.name %>のリスト一覧</h2>

    <div class="lists-container">
        <%= render @lists %>
    </div>

    <%= link_to 'リストを作成する', new_list_path, class: 'btn btn-primary w-full mt-4' %>

    <div class="pagination">
        <%= paginate @lists %>
    </div>
</div>