<div class="p-4 border rounded shadow flex justify-between items-center">
    <div class="flex-1 ml-2 my-4">
        <%= link_to list.name, list_path(list), class: "font-bold text-gray-700" %>
        <div class="text-gray-400 text-sm mt-2">
            <%= @list_museums_counts[list.id] || 0 %> ヶ所登録済み
        </div>
    </div>

    <% if @museum.present? %>
        <%= render 'lists/museum_button', list: list %>
    <% end %>
</div>
