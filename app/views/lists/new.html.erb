<div class="p-6 max-w-lg mx-auto bg-white rounded-xl shadow-md space-y-4">
    <%= form_with model: @list, url: lists_path, local: true do |f| %>

        <h2 class="text-2xl font-semibold text-center mb-4 border-b-2">リスト作成</h2>

        <div class="mb-4">
            <%= f.label :name, "リスト名<span class='text-red-500'>*</span>".html_safe, class: "block text-sm font-medium mb-2" %>
            <%= f.text_field :name, class: "input input-bordered w-full" %>
        </div>

        <div class="flex items-center">
            <%= f.submit "保存", class: "btn btn-primary w-full" %>
        </div>

        <div class="mt-4 text-center">
            <% if @museum.present? %>
                <%= link_to "戻る", museum_path(@museum), class: "text-blue-500 hover:text-blue-700" %><br />
            <% else %>
                <%= link_to "戻る", lists_path, class: "text-blue-500 hover:text-blue-700" %><br />
            <% end %>
        </div>
    <% end %>
</div>
